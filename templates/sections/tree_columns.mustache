{{!
    Frontpage section.
}}

<div class="row">
    <div class="col-4">
        <div class="br-card main-inner">
            <div class="card-content">
                <h1><i class="fas fa-users" style="font-size:larger"></i></h1>
                <h6>{{#str}} development_team, theme_govbrds {{/str}}</h6>
                <ul>
                {{#teachers}}
                    <li>{{fullname}}</li>
                {{/teachers}}
                {{^teachers}}
                    <li>{{#str}} no_teacher, theme_govbrds {{/str}}</li>
                {{/teachers}}
                </ul>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="br-card main-inner">
            <div class="card-content">
                <h1><i class="fas fa-calendar" style="font-size:larger"></i></h1>
                <h6>{{#str}} course_deadline, theme_govbrds {{/str}}</h6>
               <p>{{{startdate}}}
                {{#enddate}}
                 <br>{{#str}} to, theme_govbrds {{/str}} {{{enddate}}}
                {{/enddate}}
                </p>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="br-card main-inner">
            <div class="card-content">
                <h1><i class="fas fa-link" style="font-size:larger"></i></h1>
                <h6>{{#str}} related_courses, theme_govbrds {{/str}}</h6>
                <ul>
                {{#relatedcourses}}
                    <li>{{ fullname }}</li>
                {{/relatedcourses}}
                {{^relatedcourses}}
                    <li>{{#str}} no_related_course, theme_govbrds {{/str}}</li>
                {{/relatedcourses}}
                </ul>
            </div>
        </div>
    </div>
</div>

