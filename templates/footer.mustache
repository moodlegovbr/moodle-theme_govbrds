<!-- ... -->
            <footer class="br-footer pt-3" id="footer">
                <div class="container-lg">
                    <div class="mt-2">
                        <a href="{{{ config.homeurl }}}" class="navbar-brand d-none d-md-flex align-items-center m-0 me-4 p-0 aabtn">
                            {{# output.should_display_navbar_logo }}
                                <img src="{{output.get_compact_logo_url}}" class="pb-0 logo me-1" alt="{{sitename}}" style="filter: brightness(0) invert(1); max-width: 40px">
                            {{/ output.should_display_navbar_logo }}
                            {{^ output.should_display_navbar_logo }}
                                {{{ sitename }}}
                            {{/ output.should_display_navbar_logo }}
                        </a>   
                    </div>
                    <div class="my-3 d-flex mt-1 align-self-end">
                        <div class="m-half p-1 flex-fill">
                            <h6>{{#str}} useful_links, theme_govbrds {{/str}}:</h6>
                            {{#primarymoremenu}}
                                {{> core/moremenu}}
                            {{/primarymoremenu}}
                        </div>
                        <div class="m-half p-1 align-self-end flex-fill">
                            <h6>{{#str}} partners, theme_govbrds {{/str}}:</h6>
                            <img src="{{{ partners_url }}}" style="filter: brightness(0) invert(1); max-width: 480px">
                        </div>
                    </div>
                    <div class="info">
                        <div class="text-down-01 text-medium pb-3">
                            {{{ addressm }}}
                        </div>
                    </div>

                </div>


            </footer>
            <script src="https://docs-ds.estaleiro.serpro.gov.br/govbr-ds-core/dist/core-init.js"></script>

            {{{ output.standard_after_main_region_html }}}
            
        </div>
    </body>
</html>
