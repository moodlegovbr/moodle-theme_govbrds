{{!
    Landing page template.
}}

{{> theme_govbrds/head }}

<body {{{ bodyattributes }}} >
    {{> core/local/toast/wrapper}}
    <div id="page-wrapper" class="d-print-block">

        {{{ output.standard_top_of_body_html }}}

        {{> theme_govbrds/header }}
        {{> theme_govbrds/navbar2 }}
        <div class="bg-blue-warm-vivid-70 pt-3">
            <div class="container-lg">
                <div class="col-8">
                    <div class="dark-mode small p-3">
                        <h1 class="text-white text-up-05 text-sm-up-06 text-weight-regular text-sm-weight-light mb-5 mt-5">{{{ course.shortname }}}</h2>
                        <p class="text-white text-up-01 text-sm-up-02 text-weight-regular mb-5 mt-5">{{{ course.fullname }}}</p> 
                    </div>
                </div>
            </div>
        </div>


        <main class="d-flex flex-fill mb-5" id="main">
            <div class="container-lg d-flex">
            
                <div class="row">
                    {{> theme_govbrds/navbar }}
                    
                    <div class="col mb-5 main">
                       <div class="main-content pl-sm-3 mt-4" id="main-content">
                            <div class="row">
                                <div class="col-md-8 mb-5 main">
                                    <div class="main-inner p-4 pt-4 pr-6">
                                        <div class="br-tab">
                                            <nav class="tab-nav">
                                                <ul>
                                                    <li class="tab-item active">
                                                        <button type="button" data-panel="panel-1-icon">
                                                            <span class="name">
                                                                <span class="d-flex flex-column flex-sm-row">
                                                                    <span class="icon mb-1 mb-sm-0 mr-sm-1">
                                                                        <i class="fas fa-image" aria-hidden="true"></i>
                                                                    </span>
                                                                    <span class="name">{{#str}} about, theme_govbrds {{/str}}</span>
                                                                </span>
                                                            </span>
                                                        </button>
                                                    </li>
                                                    {{#fields}}
                                                    <li class="tab-item">
                                                        <button type="button" data-panel="panel-{{id}}-icon"><span class="name"><span class="d-flex flex-column flex-sm-row"><span class="icon mb-1 mb-sm-0 mr-sm-1"><i class="fas fa-image" aria-hidden="true"></i></span><span class="name">{{name}}</span></span></span></button>
                                                    </li>
                                                    {{/fields}}
                                                </ul>
                                            </nav>
                                            <div class="tab-content">
                                                <div class="tab-panel active" id="panel-1-icon">
                                                    <br />
                                                    {{{course.summary}}}
                                                </div>
                                                {{#fields}}
                                                    <div class="tab-panel" id="panel-{{id}}-icon">
                                                        <br />
                                                    {{{value}}}
                                                </div>
                                                {{/fields}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-5">
                                    <div class="card main-inner"" style="margin-top: -220px !important;">
                                        <div class="card-content">
                                            {{{ output.main_content }}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                                                
                            {{> theme_govbrds/sections/tree_columns }}
                                
                        </div>
                    </div>
                </div>
            </div>
        </main>

        {{> theme_govbrds/footer }}
    <!-- ... -->